// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Item {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  curruntPrice Int
  oldPrice     Int?
  compony      String
  status       Status
  active       Boolean  @default(true)
  hot          Boolean  @default(false)
  images       Images[]
  memory       String?
  ram          String?
  dec          String?
  color        String?
  sim          Int?
  battery      Int?
  processor    String?
  screen       String?
}

type Images {
  public_id String
  url       String
}

enum Status {
  New
  Refurbish
  Used
}
